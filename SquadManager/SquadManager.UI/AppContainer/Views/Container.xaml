<Window x:Class="SquadManager.UI.AppContainer.Views.Container"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:menuViewModels="clr-namespace:SquadManager.UI.Menu.ViewModels"
        xmlns:menuViews="clr-namespace:SquadManager.UI.Menu.Views"
        xmlns:squadDetailsViewModels="clr-namespace:SquadManager.UI.SquadDetails.ViewModels"
        xmlns:squadDetailsViews="clr-namespace:SquadManager.UI.SquadDetails.Views"
        mc:Ignorable="d"
        Title="SQUAD MANAGER"
        ResizeMode="CanResizeWithGrip"
        MinHeight="960"
        MinWidth="1240"
        Height="960"
        Width="1240">
    <Window.Resources>

        <DataTemplate DataType="{x:Type menuViewModels:MenuViewModel}">
            <menuViews:MenuView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type squadDetailsViewModels:SquadDetailsViewModel}">
            <squadDetailsViews:SquadDetailsView />
        </DataTemplate>
           
    </Window.Resources>

    <ContentPresenter Content="{Binding ContainerContent}"/>

</Window>
