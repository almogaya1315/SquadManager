<UserControl x:Class="SquadManager.UI.Soccer.Views.SoccerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquadManager.UI.Soccer.Views"
             xmlns:teamDetailsViewModels="clr-namespace:SquadManager.UI.Soccer.SoccerTeamDetails.ViewModels"
             xmlns:teamDetailsViews="clr-namespace:SquadManager.UI.Soccer.SoccerTeamDetails.Views"
             mc:Ignorable="d"
             d:DesignHeight="960"
             d:DesignWidth="1240">
    <Border Background="Transparent"
            Height="800"
            Width="1100">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Border Background="#bfe3e9"
                    Grid.Row="1"
                    Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      BlurRadius="3"
                                      Color="#a6d6df" />
                </Border.Effect>
            </Border>

            <Border Background="#bfe3e9"
                    Grid.ColumnSpan="3"
                    Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      BlurRadius="3"
                                      Color="#a6d6df" />
                </Border.Effect>
            </Border>

            <Border Background="#bfe3e9"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      BlurRadius="3"
                                      Color="#a6d6df" />
                </Border.Effect>
            </Border>

            <Border Background="#bfe3e9"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      BlurRadius="3"
                                      Color="#a6d6df" />
                </Border.Effect>
            </Border>

            <Border Background="#bfe3e9"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"
                                      BlurRadius="3"
                                      Color="#a6d6df" />
                </Border.Effect>
            </Border>

        </Grid>
    </Border>
</UserControl>
