                            Canvas.Left="87"
                            Margin="0"
                            Canvas.Top="168">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedFormation.Player_6.Position.Value}"
                                       Margin="5"
                                       Foreground="{StaticResource ResourceKey=#3c5458}" />
                            <TextBlock Text="{Binding SelectedFormation.Player_6.Name.Value}"
                                       Margin="5"
                                       Foreground="{StaticResource ResourceKey=#3c5458}" />
                        </StackPanel>
                    </Border>

                    <!--CM-->
                    <Border Style="{StaticResource ResourceKey=BorderStyle}"
                            Background="{Binding SelectedFormation.Player_7.Position.Value, Converter={StaticResource ResourceKey=GroupToBackground}}"
                            Canvas.Left="302"
                            Margin="0"
                            Canvas.Top="238">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedFormation.Player_7.Position.Value}"
                                       Margin="5"
                                       Foreground="{StaticResource ResourceKey=#3c5458}" />
                            <TextBlock Text="{Binding SelectedFormation.Player_7.Name.Value}"
                                       Margin="5"
                                       Foreground="{StaticResource ResourceKey=#3c5458}" />
                        </StackPanel>
                    </Border>

                    <!--CM-->
                    <Border Style="{StaticResource ResourceKey=BorderStyle}"
                            Background="{Binding SelectedFormation.Player_8.Position.Value, Converter={StaticResource ResourceKey=GroupToBackground}}"
                            Canvas.Left="657"
                            Margin="0"
                            Canvas.Top="227">
