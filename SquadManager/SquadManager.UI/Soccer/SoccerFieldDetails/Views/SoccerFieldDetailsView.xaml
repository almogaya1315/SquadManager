                                       Margin="5"
                                       Foreground="{StaticResource ResourceKey=#3c5458}" />
                        </StackPanel>
                    </Border>

                    <!--RW-->
                    <Border Style="{StaticResource ResourceKey=BorderStyle}"
                            Background="{Binding SelectedFormation.Player_9.Position.Value, Converter={StaticResource ResourceKey=GroupToBackground}}"
                            Canvas.Left="877"
                            Margin="0"
                            Canvas.Top="152">
