<UserControl x:Class="SquadManager.UI.Soccer.SoccerTeamDetails.Views.SoccerTeamDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SquadManager.UI.Soccer.SoccerTeamDetails.Views"
             mc:Ignorable="d"
             d:DesignHeight="655"
             d:DesignWidth="320">
    <Border Style="{StaticResource BorderStyle}">

        <StackPanel>
            <TextBlock FontSize="20"
                       Foreground="#3c5458"
                       Text="{Binding Team.Name}"
                       Margin="10 20 10 0"
                       Width="auto"
                       Style="{StaticResource TextBlockStyle}" />

            <TextBlock Margin="10 0 10 30"
                       FontSize="14"
                       Text="{Binding Team.Sport.Name}"
                       Width="auto"
                       Style="{StaticResource TextBlockStyle}" />

            <TextBlock Margin="10 0"
                       FontSize="14"
                       Text="Lacation:"
                       Width="auto"
                       Style="{StaticResource TextBlockStyle}" />
            <StackPanel Orientation="Horizontal"
                        Margin="10 0 10 30">
                <TextBlock Style="{StaticResource TextBlockStyle}"
                           Width="auto"
                           Margin="0"
                           FontSize="14">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}, ">
                            <Binding Path="Team.City.Name" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Style="{StaticResource TextBlockStyle}"
                           Width="auto"
                           Margin="0"
                           FontSize="14"
                           Text="{Binding Team.Nation.Name}" />
            </StackPanel>

            <TextBlock Margin="10 0"
                       FontSize="14"
                       Text="Manager:"
                       Width="auto"
                       Style="{StaticResource TextBlockStyle}" />
            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Width="auto"
                       Margin="10 0 10 30"
                       FontSize="14"
                       Text="{Binding Team.Manager.Name}" />

            <TextBlock Margin="10 0"
                       FontSize="14"
                       Text="Captain:"
                       Width="auto"
                       Style="{StaticResource TextBlockStyle}" />
            <TextBlock Style="{StaticResource TextBlockStyle}"
                       Width="auto"
                       Margin="10 0 10 30"
                       FontSize="14"
                       Text="{Binding Team.Captain.Name}" />
        </StackPanel>

    </Border>
</UserControl>
